<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/cantidadConfirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="x1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/nombreConfirmar"
        />
    <TextView
        android:id="@+id/nombreConfirmar"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        tools:text="Plato de comida"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/cantidadConfirmar"
        app:layout_constraintEnd_toStartOf="@id/precioConfirmar"/>
    <TextView
        android:id="@+id/precioConfirmar"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        tools:text="S/25.00"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/nombreConfirmar"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>