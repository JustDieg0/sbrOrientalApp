<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Sombra -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55000000"/> <!-- Color de la sombra -->
            <corners android:radius="16dp" /> <!-- Bordes redondeados -->
        </shape>
    </item>
    <!-- Fondo redondeado encima de la sombra -->
    <item >
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de fondo -->
            <corners android:radius="16dp" />
        </shape>
    </item>
</layer-list>
